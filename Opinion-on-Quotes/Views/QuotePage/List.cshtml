@using Opinion_on_Quotes.Models
@model IEnumerable<Opinion_on_Quotes.Models.QuoteDto>

@{
    ViewData["Title"] = "Quote List";
}

<h2 class="mb-4">🎭 Quote List</h2>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Quote</th>
            <th>Author</th>
			<th>Drama Title</th>
            <th>Episode</th>            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quote in Model)
        {
            <tr>
                <td>@quote.content</td>
                <td>@quote.actor</td>
                <td>@quote.drama_title</td>
                <td>@quote.episode</td>
                
                <td class="d-flex gap-2">
                    <a href="/QuotePage/Details/@quote.quote_id" class="btn btn-info btn-sm">View</a>
                    <a href="/QuotePage/Edit/@quote.quote_id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/QuotePage/DeleteConfirmation/@quote.quote_id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/QuotePage/Create" class="btn btn-primary">Add Quote</a>
