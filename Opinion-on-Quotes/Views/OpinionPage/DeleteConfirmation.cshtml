@model Opinion_on_Quotes.Models.CommentDto

@{
    ViewData["Title"] = "Delete Comment";
}

<h2>Delete Comment</h2>

<div class="alert alert-warning">
    <strong>Are you sure you want to delete this comment?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <p>@Model.CommentText</p>
        <small class="text-muted">Posted by: @Model.UserName</small>
    </div>
</div>

<form action="/OpinionPage/Delete" method="post">
    <input type="hidden" name="id" value="@Model.CommentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="/OpinionPage/Index" class="btn btn-secondary">Cancel</a>
</form>

