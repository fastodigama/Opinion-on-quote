@using Opinion_on_Quotes.Models
@model Opinion_on_Quotes.Models.CreateCommentDto
@{
    ViewData["Title"] = "Add Opinion";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-center">Add Your Opinion</h2>

            <div class="alert alert-info">
                <strong>Quote:</strong> @ViewBag.QuoteText
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form action="/OpinionPage/Add" method="post">
                        <input type="hidden" name="quote_id" value="@Model.quote_id" />

                        <div class="mb-3">
                            <label for="CommentText" class="form-label">Your Opinion</label>
                            <textarea name="CommentText" class="form-control" rows="5" placeholder="Write your thoughts here...">@Model.CommentText</textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            <a href="/OpinionPage/Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
